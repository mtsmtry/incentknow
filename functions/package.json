{
  "name": "functions",
  "scripts": {
    "lint": "npx tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulators": "npx tsc-watch --onFirstSuccess 'firebase emulators:start --only firestore,functions' --project tsconfig.json",
    "shell": "npx tsc-watch --onFirstSuccess 'firebase functions:shell'"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^2.5.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.11.1",
    "ajv": "^6.12.5",
    "axios": "^0.20.0",
    "firebase-admin": "^8.13.0",
    "firebase-functions": "^3.11.0",
    "mongodb": "^3.6.2"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.0",
    "typescript": "^3.9.7",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.3"
  },
  "private": true
}
